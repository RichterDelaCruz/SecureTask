<%
var title = '429 Too Many Requests - SecureTask';
var body = `
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-body text-center py-5">
                <div class="display-1 text-warning mb-4">
                    <i class="fas fa-hourglass-half"></i>
                </div>
                
                <h1 class="h3 text-warning mb-3">Too Many Requests</h1>
                
                <p class="text-muted mb-4">
                    You've made too many requests. Please wait a moment before trying again.
                </p>
                
                <div class="d-grid gap-2 d-md-block">
                    ${user ? `
                        <a href="/dashboard" class="btn btn-primary">
                            <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                        </a>
                    ` : `
                        <a href="/login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                        </a>
                    `}
                    
                    <button onclick="setTimeout(() => location.reload(), 5000)" class="btn btn-outline-secondary">
                        <i class="fas fa-clock me-2"></i>Wait & Retry
                    </button>
                </div>
                
                ${errorId ? `
                    <div class="mt-4">
                        <small class="text-muted">
                            Error ID: ${errorId}
                        </small>
                    </div>
                ` : ''}
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                Rate limiting helps protect our service. Thank you for your patience.
            </small>
        </div>
    </div>
</div>
`;
%>

<%- include('../layout', { title: title, body: body }) %>
