<%- include('../header') %>

<div class="row">
    <div class="col-12">
        <h1 class="h2 mb-4">
            <i class="fas fa-file-alt me-2"></i>System Logs
        </h1>
        
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">System Logs</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Showing the most recent <strong><%= logs.length %></strong> security events (maximum 1000 entries).
            Logs are automatically created for authentication, authorization, and security-sensitive operations.
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Security Audit Log
                </h6>
                <button class="btn btn-sm btn-outline-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-1"></i>Refresh
                </button>
            </div>
            <div class="card-body p-0">
                <% if (logs.length === 0) { %>
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-file-alt fa-3x mb-3"></i>
                        <p>No system logs available yet.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 140px;">Timestamp</th>
                                    <th style="width: 80px;">Level</th>
                                    <th style="width: 120px;">User</th>
                                    <th>Event Message</th>
                                    <th style="width: 100px;">IP Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% logs.forEach(log => { %>
                                                                        <tr>
                                        <td>
                                            <small class="text-nowrap">
                                                <%= new Date(log.timestamp).toLocaleString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <% if (log.level === 'ERROR') { %>
                                                <span class="badge bg-danger">ERROR</span>
                                            <% } else if (log.level === 'WARN') { %>
                                                <span class="badge bg-warning text-dark">WARN</span>
                                            <% } else { %>
                                                <span class="badge bg-info">INFO</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.username) { %>
                                                <span class="badge bg-secondary"><%= log.username %></span>
                                            <% } else { %>
                                                <span class="text-muted">System</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= log.message %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= log.ip_address || 'N/A' %>
                                            </small>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-question-circle me-2"></i>Log Level Meanings
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <span class="badge bg-info me-2">INFO</span>
                        <small>Normal security events (successful logins, account creation, etc.)</small>
                    </div>
                    <div class="col-md-4">
                        <span class="badge bg-warning text-dark me-2">WARN</span>
                        <small>Potential security concerns (failed logins, access denials, etc.)</small>
                    </div>
                    <div class="col-md-4">
                        <span class="badge bg-danger me-2">ERROR</span>
                        <small>System errors and security violations</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
