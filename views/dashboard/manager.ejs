<%- include('../header') %>

<!-- Flash Messages -->
<% if (typeof validationErrors !== 'undefined' && validationErrors.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <ul class="mb-0">
            <% validationErrors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (typeof successMessage !== 'undefined' && successMessage) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="row">
    <div class="col-12">
        <h1 class="h2 mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Project Manager Dashboard
        </h1>
        
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Welcome, <strong><%= user.username %></strong>! You can create and manage tasks for your team.
        </div>
    </div>
</div>

<div class="row">
    <!-- Create New Task -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Task
                </h6>
            </div>
            <div class="card-body">
                <form method="POST" action="/dashboard/create-task">
                    <div class="mb-3">
                        <label for="title" class="form-label">Task Title *</label>
                        <input type="text" 
                               class="form-control" 
                               id="title" 
                               name="title" 
                               required 
                               maxlength="100">
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description *</label>
                        <textarea class="form-control" 
                                  id="description" 
                                  name="description" 
                                  rows="3" 
                                  required 
                                  maxlength="500"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="assignedTo" class="form-label">Assign To *</label>
                        <select class="form-control" id="assignedTo" name="assignedTo" required>
                            <option value="">Select Employee...</option>
                            <% employees.forEach(employee => { %>
                                <option value="<%= employee.id %>"><%= employee.username %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="priority" class="form-label">Priority</label>
                        <select class="form-control" id="priority" name="priority">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100" <% if (employees.length === 0) { %>disabled<% } %>>
                        <i class="fas fa-plus me-2"></i>Create Task
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <!-- My Created Tasks -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0">
                    <i class="fas fa-tasks me-2"></i>My Created Tasks
                </h6>
                <span class="badge bg-primary"><%= tasks.length %> task(s)</span>
            </div>
            <div class="card-body">
                <% if (tasks.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-tasks fa-3x mb-3"></i>
                        <p>No tasks created yet. Create your first task using the form on the left.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Task</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tasks.forEach(task => { %>
                                    <tr>
                                        <td>
                                            <strong><%= task.title %></strong>
                                            <br><small class="text-muted"><%= task.description %></small>
                                        </td>
                                        <td>
                                            <% if (task.priority === 'High') { %>
                                                <span class="badge bg-danger">High</span>
                                            <% } else if (task.priority === 'Medium') { %>
                                                <span class="badge bg-warning">Medium</span>
                                            <% } else { %>
                                                <span class="badge bg-info">Low</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (task.status === 'Completed') { %>
                                                <span class="badge bg-success">Completed</span>
                                            <% } else { %>
                                                <span class="badge bg-primary">Pending</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(task.created_at).toLocaleDateString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <!-- Reassign Task -->
                                                <button type="button" 
                                                        class="btn btn-outline-primary" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#reassignModal<%= task.id %>"
                                                        title="Reassign task">
                                                    <i class="fas fa-user-edit me-1"></i>Reassign
                                                </button>
                                                
                                                <!-- Delete Task -->
                                                <form method="POST" action="/dashboard/delete-task" class="d-inline">
                                                    <input type="hidden" name="taskId" value="<%= task.id %>">
                                                    <button type="submit" 
                                                            class="btn btn-outline-danger" 
                                                            data-confirm-delete
                                                            title="Delete task"
                                                            onclick="return confirm('Are you sure you want to delete this task?')">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Reassignment Modals -->
<% tasks.forEach(task => { %>
<div class="modal fade" id="reassignModal<%= task.id %>" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reassign Task: <%= task.title %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/dashboard/reassign-task">
                <div class="modal-body">
                    <input type="hidden" name="taskId" value="<%= task.id %>">
                    <div class="mb-3">
                        <label for="newAssignedTo<%= task.id %>" class="form-label">Reassign to:</label>
                        <select class="form-control" id="newAssignedTo<%= task.id %>" name="newAssignedTo" required>
                            <option value="">Select Employee...</option>
                            <% employees.forEach(employee => { %>
                                <option value="<%= employee.id %>" 
                                        <% if (employee.id === task.assigned_to) { %>selected<% } %>>
                                    <%= employee.username %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-info-circle me-1"></i>
                            Select an employee to assign this task to. The task will be reassigned accordingly.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Reassign Task</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% }) %>

<% if (employees.length === 0) { %>
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>No employees found!</strong> 
                Tasks can only be assigned to employees. Please ask your administrator to create employee accounts, 
                or have employees register themselves at <a href="/register" class="alert-link">/register</a>.
            </div>
        </div>
    </div>
<% } %>

<%- include('../footer') %>
