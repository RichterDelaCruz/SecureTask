<%- include('../header') %>

<div class="row">
    <div class="col-12">
        <h1 class="h2 mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Project Manager Dashboard
        </h1>
        
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Welcome, <strong><%= user.username %></strong>! You can create and manage tasks for your team.
        </div>
    </div>
</div>

<div class="row">
    <!-- Create New Task -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Task
                </h6>
            </div>
            <div class="card-body">
                <form method="POST" action="/dashboard/create-task">
                    <div class="mb-3">
                        <label for="title" class="form-label">Task Title *</label>
                        <input type="text" 
                               class="form-control" 
                               id="title" 
                               name="title" 
                               required 
                               maxlength="200">
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description *</label>
                        <textarea class="form-control" 
                                  id="description" 
                                  name="description" 
                                  rows="3" 
                                  required 
                                  maxlength="1000"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="assignedTo" class="form-label">Assign To *</label>
                        <select class="form-control" id="assignedTo" name="assignedTo" required>
                            <option value="">Select Employee...</option>
                            <% employees.forEach(employee => { %>
                                <option value="<%= employee.id %>"><%= employee.username %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="priority" class="form-label">Priority</label>
                        <select class="form-control" id="priority" name="priority">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-plus me-2"></i>Create Task
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <!-- My Created Tasks -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0">
                    <i class="fas fa-tasks me-2"></i>My Created Tasks
                </h6>
                <span class="badge bg-primary"><%= tasks.length %> task(s)</span>
            </div>
            <div class="card-body">
                <% if (tasks.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-tasks fa-3x mb-3"></i>
                        <p>No tasks created yet. Create your first task using the form on the left.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Task</th>
                                    <th>Assigned To</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tasks.forEach(task => { %>
                                    <tr>
                                        <td>
                                            <strong><%= task.title %></strong>
                                            <br><small class="text-muted"><%= task.description %></small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary"><%= task.assigned_username %></span>
                                        </td>
                                        <td>
                                            <% if (task.priority === 'High') { %>
                                                <span class="badge bg-danger">High</span>
                                            <% } else if (task.priority === 'Medium') { %>
                                                <span class="badge bg-warning">Medium</span>
                                            <% } else { %>
                                                <span class="badge bg-info">Low</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (task.completed) { %>
                                                <span class="badge bg-success">Completed</span>
                                            <% } else { %>
                                                <span class="badge bg-primary">In Progress</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(task.created_at).toLocaleDateString() %>
                                            </small>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% if (employees.length === 0) { %>
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>No employees found!</strong> 
                Tasks can only be assigned to employees. Please ask your administrator to create employee accounts, 
                or have employees register themselves at <a href="/register" class="alert-link">/register</a>.
            </div>
        </div>
    </div>
<% } %>

<%- include('../footer') %>
