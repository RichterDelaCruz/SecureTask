<%- include('../header') %>

<div class="row">
    <div class="col-12">
        <h1 class="h2 mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Administrator Dashboard
        </h1>
        
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Welcome, <strong><%= user.username %></strong>! You have administrative privileges to manage the system.
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="display-1 text-primary mb-3">
                    <i class="fas fa-users"></i>
                </div>
                <h5 class="card-title">Manage Project Managers</h5>
                <p class="card-text">Create and manage Project Manager accounts who can assign tasks to employees.</p>
                <a href="/admin/managers" class="btn btn-primary">
                    <i class="fas fa-users me-2"></i>Manage Managers
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="display-1 text-info mb-3">
                    <i class="fas fa-file-alt"></i>
                </div>
                <h5 class="card-title">System Logs</h5>
                <p class="card-text">View security audit logs, authentication events, and system activities.</p>
                <a href="/admin/logs" class="btn btn-info">
                    <i class="fas fa-file-alt me-2"></i>View Logs
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-shield-alt me-2"></i>System Security Status
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Authentication System</strong>
                        </div>
                        <small class="text-muted">All login attempts are logged and monitored</small>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Access Control</strong>
                        </div>
                        <small class="text-muted">Role-based permissions are enforced</small>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Audit Logging</strong>
                        </div>
                        <small class="text-muted">All security events are recorded</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
