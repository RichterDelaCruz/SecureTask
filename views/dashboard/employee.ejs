<%- include('../header') %>

<div class="row">
    <div class="col-12">
        <h1 class="h2 mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Employee Dashboard
        </h1>
        
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Welcome, <strong><%= user.username %></strong>! Here are the tasks assigned to you.
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0">
                    <i class="fas fa-tasks me-2"></i>My Assigned Tasks
                </h6>
                <span class="badge bg-primary"><%= tasks.length %> task(s)</span>
            </div>
            <div class="card-body">
                <% if (tasks.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-tasks fa-3x mb-3"></i>
                        <p>No tasks assigned to you yet. Tasks will appear here when a Project Manager assigns them to you.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Task</th>
                                    <th>Priority</th>
                                    <th>Assigned By</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tasks.forEach(task => { %>
                                    <tr>
                                        <td>
                                            <strong><%= task.title %></strong>
                                            <br><small class="text-muted"><%= task.description %></small>
                                        </td>
                                        <td>
                                            <% if (task.priority === 'High') { %>
                                                <span class="badge bg-danger">High</span>
                                            <% } else if (task.priority === 'Medium') { %>
                                                <span class="badge bg-warning">Medium</span>
                                            <% } else { %>
                                                <span class="badge bg-info">Low</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary"><%= task.created_by_username %></span>
                                        </td>
                                        <td>
                                            <% if (task.completed) { %>
                                                <span class="badge bg-success">Completed</span>
                                            <% } else { %>
                                                <span class="badge bg-primary">In Progress</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(task.created_at).toLocaleDateString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <% if (!task.completed) { %>
                                                <form method="POST" action="/dashboard/complete-task" class="d-inline">
                                                    <input type="hidden" name="taskId" value="<%= task.id %>">
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-success" 
                                                            title="Mark as completed">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle"></i> Done
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Task Summary
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="h4 text-primary"><%= tasks.length %></div>
                        <small class="text-muted">Total Tasks</small>
                    </div>
                    <div class="col-md-3">
                        <div class="h4 text-success"><%= tasks.filter(t => t.completed).length %></div>
                        <small class="text-muted">Completed</small>
                    </div>
                    <div class="col-md-3">
                        <div class="h4 text-warning"><%= tasks.filter(t => !t.completed).length %></div>
                        <small class="text-muted">In Progress</small>
                    </div>
                    <div class="col-md-3">
                        <div class="h4 text-danger"><%= tasks.filter(t => t.priority === 'High' && !t.completed).length %></div>
                        <small class="text-muted">High Priority</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
